@rendermode InteractiveServer

@if(RestaurantDetail is not null)
{
    <div class="card text-center">
        <div class="card-body">
            <h5 class="card-title">Restaurant Detail</h5>
            <div class="content-detail">
                <div class="detail-group">
                    <span class="detail-header">Restaurant ID:</span>
                    <span class="detail-body">@(Guid.NewGuid())</span>
                </div>
               <div class="detail-group">
                   <span class="detail-header">Restaurant Name: </span>
                   <span class="detail-body">Bill Gates Restaurant</span>
               </div>
                <div class="detail-group">
                    <span class="detail-header">Country: </span>
                    <span class="detail-body">Turkey</span>
                </div>
                <div class="detail-group">
                    <span class="detail-header">Email: </span>
                    <span class="detail-body">melihsimsek02@gmail.com</span>
                </div>
                <div class="detail-group">
                    <span class="detail-header">Phone: </span>
                    <span class="detail-body">+905554792332</span>
                </div>
                <div class="detail-buttons">
                    <button type="button" class="btn btn-lg btn-primary">Update</button>
                   <button type="button" class="btn btn-lg btn-danger">Delete</button>
                </div>
            </div>
        </div>
    </div>
}
else
{
   

    <div class="card text-center">
        <div class="card-body">
            <h5 class="card-title">Create Your Restaurant</h5>
            <div class="content-form">
                <EditForm Model="CreateRestaurantRequest" OnSubmit="Submit">
                    <div class="form-group">
                        <InputText type="text" @bind-Value="CreateRestaurantRequest.Name" placeholder="Restaurant Name" class="form-control" />
                    </div>
                    <div class="form-group">
                        <InputText type="email" @bind-Value="CreateRestaurantRequest.EmailContact" placeholder="Email Address" class="form-control" />
                    </div>
                    <div class="form-group">
                        <InputText type="text" @bind-Value="CreateRestaurantRequest.PhoneContact" placeholder="Phone Number (With regional + symbol) )" class="form-control" />
                    </div>
                    <div class="form-group">
                        <InputSelect @bind-Value="CreateRestaurantRequest.Country" class="form-control">
                            <option value="">Select Country ...</option>
                            <option value="Turkey">Turkey</option>
                            <option value="U.S.A">U.S.A</option>
                            <option value="Germany">Germany</option>
                        </InputSelect>
                    </div>
                    <div class="form-button">
                        <button type="submit" class="btn btn-primary btn-lg">Create</button>
                    </div>
                </EditForm>
            </div>
        </div>
    </div>
}

